{
  "name": "rita",
  "version": "2.4.72",
  "author": "Daniel C. Howe",
  "license": "GPL-3.0",
  "description": "tools for generative writing",
  "homepage": "https://rednoise.org/rita",
  "repository": {
    "type": "git",
    "url": "https://github.com/dhowe/ritajs.git"
  },
  "files": [
    "dist/*.js",
    "example.js"
  ],
  "main": "dist/rita.js",
  "autoupdate": {
    "source": "npm",
    "target": "rita",
    "fileMap": [
      {
        "basePath": "dist",
        "files": [
          "*.js"
        ]
      }
    ]
  },
  "runkitExampleFilename": "example.js",
  "keywords": [
    "natural language",
    "generative text",
    "text analysis"
  ],
  "scripts": {
    "clean": "rm -f dist/*.*",
    "build": "npm run clean && webpack",
    "test": "mocha -r esm",
    "prepare": "npm run compile",
    "watch.src": "npm-watch test.src",
    "test.src": "sh -c ./scripts/test-src.sh",
    "watch.grammar": "npm-watch antlr4.js",
    "test.g": "mocha -r esm ./test/*.js -g ",
    "compile": "npm run fix.antlr && npm run antlr4.js",
    "coverage": "nyc --reporter=html mocha && open coverage/index.html",
    "fix.antlr": "cp -r ./fixed-antlr/JavaScript/src/antlr4/ node_modules/antlr4/src/antlr4",
    "antlr4.js": "java -Xmx500M -cp 'jlib/antlr4-4.9.2-SNAPSHOT-complete.jar' org.antlr.v4.Tool -Dlanguage=JavaScript -o grammar/antlr -visitor -no-listener -Xexact-output-dir grammar/RiScript*.g4"
  },
  "nyc": {
    "include": "src"
  },
  "watch": {
    "antlr4.js": {
      "patterns": "grammar",
      "extensions": "g4"
    },
    "test.src": {
      "patterns": [
        "src",
        "test"
      ],
      "ignore": "before.js",
      "extensions": "js"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.12.16",
    "@babel/plugin-proposal-class-properties": "^7.12.13",
    "@babel/preset-env": "^7.12.16",
    "antlr4": "^4.9.1",
    "babel-loader": "^8.2.2",
    "chai": "^4.2.0",
    "codecov": "^3.8.1",
    "deepmerge": "^4.2.2",
    "esm": "^3.2.25",
    "flatted": "^2.0.2",
    "he": "^1.2.0",
    "mocha": "^6.2.2",
    "npe": "^1.1.3",
    "npm-watch": "^0.6.0",
    "nyc": "^15.1.0",
    "terser-webpack-plugin": "2.3.8",
    "webpack": "^4.41.2",
    "webpack-bundle-analyzer": "^4.1.0",
    "webpack-cli": "^3.3.10"
  }
}
